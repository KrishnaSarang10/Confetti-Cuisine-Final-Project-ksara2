<h1 class="center">Culinary Package Data for
  <%= vacations.title %>
</h1>
<img src="<%= `/images/${vacations.heroImage}` %>" height="300px" width="300px" >
<table class="table">
  <br><br>
  <tr>
    <th>Title</th>
    <td>
      <%= vacations.title %>
    </td>
  </tr>
  <tr>
    <th>Description</th>
    <td>
      <%= vacations.description%>
    </td>
  </tr>
  <tr>
    <th>Max Travelers</th>
    <td>
      <%= vacations.maxTravelers%>
    </td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>
      <%= vacations.cost%>
    </td>
  </tr>
  <tr>
    <th>Cuisine</th>
    <td>
      <%= vacations.cuisine%>
    </td>
  </tr>
  <tr>
    <th>Hero Image</th>
    <td>
      <%= vacations.heroImage%>
    </td>
  </tr>
  <tr>
    <th>Destination</th>
    <td>
      <%= vacations.destination%>
    </td>
  </tr>
  <tr>
    <th>Departure Location</th>
    <td>
      <%= vacations.departureLocation%>
    </td>
  </tr>
  <tr>
    <th>Departure Date</th>
    <td>
      <%= vacations.departureDate%>
    </td>
  </tr>
  <tr>
    <th>Return Date</th>
    <td>
      <%= vacations.returnDate%>
    </td>
  </tr>
</table>

<% if (loggedIn) { %>
<div>
  <a class="button" href="<%=`/vacations/${vacations._id}/edit`%>">
    Edit Culinary Package Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/vacations/${vacations._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/vacations">View all vacations</a>
</div>
<% } %>
